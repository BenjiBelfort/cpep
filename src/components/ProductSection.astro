---
// src/components/ProductSection.astro
import { Icon } from 'astro-icon/components';
import ProductCard from '../components/ui/ProductCard.astro';

const products = [
  {
    title: 'Sacs papier poignées plates',
    desc: 'Kraft blanc/brun, poignées plates renforcées. Formats retail, impression 1 à 4 couleurs + vernis.',
    slug: 'sac-papier-poignees-plates',
    best: true, eco: true, economy: true,  // 3 badges
  },
  {
    title: 'Sacs papier poignées torsadées',
    desc: 'Kraft/offset, poignées torsadées solides. Large choix de formats, encres et finitions.',
    slug: 'sac-papier-poignees-torsadees',
    eco: true, best: true,                 // 2 badges
  },
  {
    title: 'Sacs papier poignées découpées',
    desc: 'Découpe “die-cut”, renfort carton. Idéal boutiques & events. Quadri/tons directs.',
    slug: 'sac-papier-poignees-decoupees',
    economy: true,                         // 1 badge
  },
  {
    title: 'Sacs réutilisables',
    desc: 'Non-tissé, coton, jute, rPET. Sérigraphie, transfert, broderie. Durable et valorisant.',
    slug: 'sacs-reutilisables',
    eco: true,
  },
  {
    title: 'Packaging haut de gamme',
    desc: 'Boîtes rigides/cloche/tiroir, papiers de création, dorure/gaufrage. Calages sur mesure.',
    slug: 'packaging-haut-de-gamme',
    best: true,
  },
  {
    title: 'Gamme food',
    desc: 'Sacs/boîtes pâtissières, barquettes. Contact alimentaire, anti-graisse, fermetures sûres.',
    slug: 'gamme-food',
    economy: true,
  },
  {
    title: 'Étiquettes adhésives',
    desc: 'Bobine/planche, vernis sélectif, dorure. Adhésifs adaptés (vini, cosméto, logistique).',
    slug: 'etiquettes-adhesives',
  },
  {
    title: 'Print',
    desc: 'Cartes, plaquettes, flyers, affiches, brochures. Papiers certifiés, finitions pro.',
    slug: 'print',
  },
  {
    title: 'PLV & présentoirs',
    desc: 'Comptoir/sol, totems, stop-rayon. Carton & mixtes, montage facile.',
    slug: 'plv-et-presentoirs',
    eco: true,
  },
];

const href = (slug: string) => `/${slug}`;
---

<section id="print" aria-labelledby="titre-print" class="mx-auto max-w-6xl px-4 py-16 scroll-m-4">
  <h2 id="titre-print" class="text-center text-5xl md:text-7xl text-text">
    <span class="inline-flex items-center justify-center gap-3 align-middle">
      <Icon name="lucide:handbag" class="w-8 h-8 md:w-14 md:h-14" aria-hidden="true" />
      <span>Print</span>
    </span>
  </h2>

  <p class="mx-auto text-center mt-4 max-w-3xl text-gray-800">
    Emballages personnalisés sur mesure pour marques exigeantes : <strong>sacs papier/coton</strong>, <strong>boîtes rigides</strong> et <strong>boîtes pliantes</strong>,
    <strong>étuis</strong>, <strong>coffrets</strong>, <strong>calages</strong>, <strong>étiquettes & stickers</strong>, <strong>rubans & scellés</strong>, <strong>PLV</strong>.
    Impression haute qualité, finitions premium (dorure, vernis, embossage), petites et grandes séries, délais maîtrisés.
  </p>

  <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {products.map((p) => (
      <ProductCard
        title={p.title}
        description={p.desc}
        href={href(p.slug)}
        best={p.best}
        eco={p.eco}
        economy={p.economy}
      />
    ))}
  </div>

  <!-- Callout repères produits -->
    <aside class="mt-10 w-fit mx-auto">
    <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
        <!-- Économique -->
        <div class="inline-flex items-center gap-3">
        <span class="inline-grid place-items-center h-10 w-10 rounded-full bg-white shadow-sm">
            <img src="/logo/save-badge.png" alt="Produit économique" class="h-9 w-9 object-contain" loading="lazy" decoding="async" />
        </span>
        <span class="text-text font-medium">Économique</span>
        </div>

        <!-- Écologique -->
        <div class="inline-flex items-center gap-3">
        <span class="inline-grid place-items-center h-10 w-10 rounded-full bg-white shadow-sm">
            <img src="/logo/ecologo.png" alt="Produits écologiques" class="h-9 w-9 object-contain" loading="lazy" decoding="async" />
        </span>
        <span class="text-text font-medium">Environnement friendly</span>
        </div>

        <!-- Best seller -->
        <div class="inline-flex items-center gap-3">
        <span class="inline-grid place-items-center h-10 w-10 rounded-full bg-white shadow-sm">
            <img src="/logo/best-sale.png" alt="Meilleures ventes" class="h-9 w-9 object-contain" loading="lazy" decoding="async" />
        </span>
        <span class="text-text font-medium">Top ventes</span>
        </div>
    </div>
    </aside>

</section>
